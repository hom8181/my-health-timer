<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/rest_time_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="휴식 시간 설정"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText"
            android:layout_marginRight="10dp">
        </Button>

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="초기화"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText"
            android:layout_marginRight="10dp">
        </Button>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/exercise_time"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:countDown="false"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="50sp"
                android:text="01:00"
                tools:targetApi="24"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/rest_time"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:countDown="false"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="50sp"
                android:text="01:00"
                tools:targetApi="24"
                tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/exercise_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인터벌 운동 시작"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:width="250dp"
            tools:ignore="ButtonStyle,HardcodedText,UnusedAttribute"
            android:backgroundTint="@color/green"
            android:layout_marginLeft="15dp">
        </Button>

        <Button
            android:id="@+id/exercise_ing_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 중.. \n운동 후 자동으로 휴식이 시작됩니다."
            android:width="250dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="15dp"
            tools:ignore="ButtonStyle,HardcodedText"
            android:visibility="gone"
            android:layout_marginLeft="15dp">
        </Button>

        <Button
            android:id="@+id/rest_ing_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴식 중.. \n휴식 후 자동으로 운동이 시작됩니다."
            android:width="250dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="15dp"
            tools:ignore="ButtonStyle,HardcodedText,UnusedAttribute"
            android:visibility="gone"
            android:backgroundTint="@color/red"
            android:layout_marginLeft="15dp">
        </Button>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_btn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="세트 수"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="운동 시간"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="휴식 시간"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="세트 완료 시각"
            android:textSize="11sp"
            android:gravity="center"
            tools:ignore="HardcodedText,SmallSp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_text_info">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical"
            tools:ignore="AdapterViewChildren,NestedScrolling" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>