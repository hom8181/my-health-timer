<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="일시중지"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            tools:ignore="HardcodedText"
            android:layout_marginRight="10dp">
        </Button>

        <Button
            android:id="@+id/stop_end_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="다시시작"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            tools:ignore="HardcodedText"
            android:layout_marginRight="10dp">
        </Button>

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="초기화"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText"
            android:layout_marginRight="10dp">
        </Button>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <Chronometer
                android:id="@+id/exercise_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="50sp"/>

            <Chronometer
                android:id="@+id/rest_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="50sp" />

            <Chronometer
                android:id="@+id/calculate_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/red"
                android:visibility="gone"
                android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/stop_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일시 정지 상태입니다. 다시 시작을 눌러주세요"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:width="250dp"
            android:visibility="gone"
            tools:ignore="HardcodedText,UnusedAttribute"
            android:backgroundTint="@color/green"
            android:layout_marginLeft="15dp">
        </TextView>

        <Button
            android:id="@+id/exercise_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1세트 운동 시작"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:width="250dp"
            tools:ignore="HardcodedText,UnusedAttribute"
            android:backgroundTint="@color/green"
            android:layout_marginLeft="15dp">
        </Button>

        <Button
            android:id="@+id/rest_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 완료 &amp; 휴식 시작"
            android:width="250dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="15dp"
            tools:ignore="HardcodedText"
            android:visibility="gone"
            android:backgroundTint="@color/red"
            android:layout_marginLeft="15dp">
        </Button>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_btn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="세트 수"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="운동 시간"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="휴식 시간"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="세트 완료 시각"
            android:textSize="11sp"
            android:gravity="center"
            tools:ignore="HardcodedText,SmallSp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/set_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/list_text_info"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/scroll_text"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>